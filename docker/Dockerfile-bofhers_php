# Partimos de la imagen inicial de php-fpm
ARG PHP_VERSION=7.2
FROM php:${PHP_VERSION}-fpm

# Permitimos configurar esto desde el docker-compose
ARG PHP_USER
ARG PHP_UID
ARG PHP_WORKDIR

# Dependencias
RUN apt-get update \
    && apt-get install -y zip unzip git

# ConfiguraciÃ³n PHP
RUN docker-php-ext-install pdo_mysql
RUN mv "${PHP_INI_DIR}/php.ini-development" "${PHP_INI_DIR}/php.ini"
RUN echo "memory_limit=-1" > "${PHP_INI_DIR}/conf.d/z_bofhers.ini"

# Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Usuario de PHP con permisos en /var/www y www-data
RUN useradd -G www-data,root -u ${PHP_UID} -d /home/${PHP_USER} ${PHP_USER}
RUN mkdir -p /home/${PHP_USER}/.composer && \
    chown -R ${PHP_USER}: /home/${PHP_USER}

# Workdir y usuario
WORKDIR ${PHP_WORKDIR}
USER ${PHP_USER}

# Entrypoint
ENTRYPOINT ["docker/scripts/bofhers_php_start.sh"]
